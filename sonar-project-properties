
# Required properties (must be unique)
sonar.projectKey=simple-apps

# Project identification
sonar.projectName=simple-apps
sonar.projectVersion=1.0

# Source files configuration
sonar.sources=.
sonar.sourceEncoding=UTF-8

# Test configuration
sonar.tests=apps/testing
sonar.test.inclusions=**/*.test.js
sonar.javascript.lcov.reportPaths=coverage/lcov.info

# Exclusions (more precise)
sonar.exclusions=apps/coverage/**, apps/node_modules/, apps/testing/**, apps/Dockerfile

# JavaScript/TypeScript specific
sonar.javascript.file.suffixes=apps/coverage/lcov.info
